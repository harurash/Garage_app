<% if user_signed_in? %>
  <% if tweet.favorited_by?(current_user) %> 
    <%=link_to tweet_favorites_path(tweet.id), method: :delete,remote: true do %>
      <i class="fas fa-heart my-example faa-tada animated-hover"></i>
    <%end%>
  <% else %>
    <%=link_to tweet_favorites_path(tweet.id), method: :post,remote: true do %>
      <i class="far fa-heart my-example faa-tada animated-hover"></i>
    <%end%>
  <% end %>
<% else %>
    <p><i class="fas fa-heart my-example-out faa-tada "></i></p>
<% end %>